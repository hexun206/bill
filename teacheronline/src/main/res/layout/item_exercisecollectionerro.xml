            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/gray004"-->
            <!--/>-->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/v_interval">

            <TextView
                android:id="@+id/tv_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/default_value"
                android:textColor="@color/black"
                app:layout_marginLeftPercent="2.22%w"
                app:layout_paddingLeftPercent="0.69%w"
                app:layout_textSizePercent="3.89%w"
                />


            <ImageView
                android:id="@+id/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_arrow"
                app:layout_marginRightPercent="3.06%w"
                />

            <TextView
                android:id="@+id/tv_exerciseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/icon_arrow_right"
                android:text="10/100"
                android:textColor="@color/gray013"
                app:layout_textSizePercent="3.89%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
