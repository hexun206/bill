<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    android:id="@+id/rl_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_coffee_break"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="45%w"
        android:layout_width="wrap_content"
        android:src="@drawable/coffee_break"
        android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_below="@+id/img_coffee_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_marginTopPercent="17.2%w"
        >
        <TextView
            android:id="@+id/tv_evaluation_continue"
            android:gravity="center"
            android:textColor="@color/green004"
            android:text="@string/evaluation_continue"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_jxzt_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>