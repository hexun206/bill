<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
    <!-- height:40dp -->
    <LinearLayout
        android:id="@+id/ll_screening_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_heightPercent="11.11%w"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_screening_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_selected_screening"
            android:layout_marginLeft="27dp"
            app:layout_marginLeftPercent="7.5%w"/>

        <TextView
            android:id="@+id/tv_screening_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            app:layout_marginLeftPercent="1.67%w"
            android:textColor="@color/green001"
            app:layout_textSizePercent="3.88%w"/>
    </LinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>