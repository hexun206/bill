<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".personal.RecorderActivity">


    <LinearLayout
        android:id="@+id/ll_recorder_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#40000000"
        android:orientation="vertical"
        >


        <Chronometer
            android:id="@+id/chronometer_recorder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chronometer_recorder_time"
            android:layout_alignTop="@+id/chronometer_recorder_time"
            android:layout_marginRight="7.5dp"
            android:layout_toLeftOf="@+id/chronometer_recorder_time">

            <View
                android:id="@+id/view_recorder_status"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_red_small"
                android:visibility="invisible"

                />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_time_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chronometer_recorder_time"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2.5dp"
            android:text="录制时间控制在20分钟以内"
            android:textColor="@color/gray016"
            android:textSize="13sp"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_recorder_zoom"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="135dp"
        android:background="@drawable/bg_record_zoom"
        android:gravity="center"
        android:text="x1"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="invisible"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_gravity="bottom"
        android:background="#40000000"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_video_change_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_video_play_status"
            android:src="@drawable/ic_change_cam"
            />


        <ImageView
            android:id="@+id/img_video_play_status"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_video_play"
            />

        <com.huatu.teacheronline.widget.RoundProgress
            android:id="@+id/img_video_play_progress"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            app:srp_progressColor="@color/red005"

            app:srp_roundColor="@color/trans"
            app:srp_roundWidth="5dp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/img_video_play_status"
            android:orientation="horizontal"

            >

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_video_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_video_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible"

                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


    </RelativeLayout>


</FrameLayout>