<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cover_player_controller_top_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/shape_controller_top_gradient"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover_player_controller_image_view_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/cover_player_controller_text_view_video_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_player_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_rectangle_white_noradius"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="标清"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/tv_player_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_rectangle_white_noradius"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="倍数"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_right_player"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/ib_main_right_player"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/download_zhibo"
                android:visibility="visible" />

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cover_player_controller_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_controller_bottom_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cover_player_controller_image_view_play_state"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_play_state" />

            <TextView
                android:id="@+id/cover_player_controller_text_view_curr_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/cover_player_controller_seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progressDrawable="@drawable/style_video_player_video_seekbar"
                android:splitTrack="false"
                android:thumb="@drawable/selector_seek_bar_thumb" />

            <TextView
                android:id="@+id/cover_player_controller_text_view_total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/cover_player_controller_image_view_switch_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_full_screen" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottombar_bottom"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="24dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                app:kswBackDrawable="@drawable/miui_back_drawable"
                app:kswThumbDrawable="@drawable/miui_thumb_drawable"
                app:kswThumbHeight="18dp"
                app:kswThumbRangeRatio="2"
                app:kswThumbWidth="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="连续播放"
                android:textColor="@color/white"
                android:textSize="14sp"

                />


            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_bottombar_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/pb_bottombar_withdraw"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/pb_circular_reveal"
                    android:rotation="-90" />


                <ImageView
                    android:id="@+id/img_bottombar_withdraw"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_bottombar_withdraw"
                    android:visibility="gone"

                    />


                <TextView
                    android:id="@+id/tv_bottombar_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="听课返现"
                    android:textColor="@color/white"
                    android:textSize="14sp"

                    />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_bottombar_timetable"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_bottombar_timetable"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_timetable" />


                <TextView
                    android:id="@+id/tv_bottombar_timetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="课表"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.zhy.android.percent.support.PercentLinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>