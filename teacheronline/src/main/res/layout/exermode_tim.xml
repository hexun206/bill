<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/v_interval"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white001"
        app:layout_heightPercent="2.78%w"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="22.4%w"
        android:layout_below="@id/v_interval">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/gray002"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray002"/>
        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_new"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_examname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="测试"
            android:maxLines="2"
            android:textColor="@color/black007"
            android:lineSpacingExtra="7dp"
            app:layout_marginRightPercent="11.94%w"
            app:layout_marginLeftPercent="5.5%w"
            app:layout_marginTopPercent="2.22%w"
            app:layout_textSizePercent="4.17%w"/>

        <TextView
            android:id="@+id/Fraction"
            android:layout_width="wrap_content"
            android:text="分数：0"
            android:textColor="#cecece"
            app:layout_marginTopPercent="14.44%w"
            app:layout_textSizePercent="3.77%w"
            app:layout_marginLeftPercent="5.5%w"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/raik"
            android:layout_width="wrap_content"
            app:layout_textSizePercent="3.77%w"
            android:layout_toRightOf="@+id/Fraction"
            android:textColor="#cecece"
            app:layout_marginLeftPercent="5.5%w"
            app:layout_marginTopPercent="14.44%w"
            android:text="排名：0"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/more_arrow"
            app:layout_marginRightPercent="5.28%w" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
