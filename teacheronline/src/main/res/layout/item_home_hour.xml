<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_heightPercent="13.3%w"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:text="加载中..."
                app:layout_textSizePercent="3.33%w"
                app:layout_marginTopPercent="4.3%w"
                android:maxEms="12"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/red003"
                app:layout_marginLeftPercent="4.86%w"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:text="【9:00-10:00】"
                android:layout_toLeftOf="@+id/tv_zb"
                app:layout_marginTopPercent="4.58%w"
                app:layout_marginRightPercent="3.2%w"
                app:layout_textSizePercent="3.05%w"
                android:textColor="@color/red003"
                app:layout_marginLeftPercent="4.86%w"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_zb"
                android:layout_width="wrap_content"
                android:text="正在直播"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/ic_zzzb"
                app:layout_textSizePercent="3.05%w"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="4.86%w"
                app:layout_marginTopPercent="3.7%w"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:background="@drawable/bg_dotted_line"
                android:layout_alignParentBottom="true"
                app:layout_marginLeftPercent="4.86%w"
                app:layout_marginRightPercent="4.86%w"
                android:layerType="software"
                android:layout_height="4px"></View>


        </com.zhy.android.percent.support.PercentRelativeLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
