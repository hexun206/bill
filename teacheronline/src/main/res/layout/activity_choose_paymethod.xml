<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white005">

    <include
        android:id="@+id/top_bar"
        layout="@layout/general_topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/top_bar"
        android:layout_height="wrap_content">

    <!-- height:50dp -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rl_obtainaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_add_add"/>

        <TextView
            android:id="@+id/tv_add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="添加收货地址"
            android:textColor="#4b4b4b"
            android:visibility="gone"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rl_state"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/tv_Prompt"
                android:layout_width="wrap_content"
                android:text="点击选择收货地址"
                android:layout_centerVertical="true"
                app:layout_marginLeftPercent="4.44%w"
                android:textColor="@color/gray002"
                app:layout_textSizePercent="3.88%w"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_choose_obtain_address_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_choose_obtain_address_number"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="true"
                android:text=""
                android:textColor="#101619"
                android:visibility="gone"
                app:layout_marginLeftPercent="4.16%w"
                app:layout_marginTopPercent="1.55%w"
                app:layout_textSizePercent="4.58%w"/>

            <TextView
                android:id="@+id/tv_choose_obtain_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_choose_obtain_address_person"
                android:text=""
                android:textColor="#4b4b4b"
                app:layout_marginBottomPercent="1.55%w"
                app:layout_marginLeftPercent="4.16%w"
                app:layout_marginTopPercent="1.88%w"
                app:layout_textSizePercent="4.58%w"/>

            <TextView
                android:id="@+id/tv_choose_obtain_address_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_choose_obtain_address_person"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="#101619"
                android:textStyle=""
                android:visibility="visible"
                app:layout_marginRightPercent="4.25%w"
                app:layout_textSizePercent="4.58%w"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_edit_phone"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_phone_zffs"
                app:layout_marginLeftPercent="4.44%w"
                android:layout_alignParentBottom="true"
                app:layout_marginBottomPercent="4.55%w"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/tv_edit"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/phone"
                app:layout_marginLeftPercent="7.08%w"

                android:textSize="14dp"
                app:layout_marginBottomPercent="4.25%w"
                android:digits="1234567890"
                android:hint="输入手机号码,以便客服推送课程服务"
                android:textColorHint="@color/gray018"
                android:maxLength="11"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!--<com.zhy.android.percent.support.PercentRelativeLayout-->
            <!--android:id="@+id/ts_edit_phone"-->
            <!--android:layout_width="match_parent"-->
