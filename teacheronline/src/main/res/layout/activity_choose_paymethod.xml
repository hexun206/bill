                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_aniu"
                android:layout_width="wrap_content"
                android:src="@drawable/oval_g"
                app:layout_marginTopPercent="3.5%w"
                app:layout_marginRightPercent="0.77%w"
                android:layout_toLeftOf="@+id/tv_xz"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_p"
                android:layout_width="wrap_content"
                android:text="(查看须知)"
                app:layout_textSizePercent="3.88%w"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_xz"
                app:layout_marginTopPercent="0.77%w"
                android:textColor="@color/green013"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="84dp"
                android:background="@color/green013"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_p"
                android:layout_height="2px"></View>

        </com.zhy.android.percent.support.PercentRelativeLayout>


    <!-- width:319dp height:45dp -->
