    <!-- height:107dp -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rl_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_heightPercent="25%w"
        android:orientation="horizontal"
        app:layout_marginTopPercent="2.77%w">
        <!--app:layout_heightPercent="23%w"-->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="115dp"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/zb_mrt"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="13dp"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_projectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题"
                android:maxLength="45"
                android:textColor="@color/black007"
                android:lineSpacingExtra="3dp"
                app:layout_marginLeftPercent="4.44%w"
                app:layout_marginRightPercent="4.44%w"
                app:layout_marginTopPercent="4.8%w"
                android:textSize="12dp"/>


            <TextView
                android:id="@+id/tv_zhibotime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="中学班级"
                android:lines="1"
                android:textColor="@color/gray014"
                android:layout_below="@+id/tv_projectName"
                app:layout_marginLeftPercent="4.44%w"
                app:layout_marginTopPercent="2.11%w"
                android:textSize="11dp"/>


                <com.zhy.android.percent.support.PercentRelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        app:layout_marginLeftPercent="4.44%w"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_cash"
                            android:layout_width="wrap_content"
                            android:text="听课返现"
                            android:background="@color/orange002"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            app:layout_marginTopPercent="3%w"
                            app:layout_marginRightPercent="4.44%w"
                            android:visibility="gone"
                            android:padding="1dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_discou"
                            android:layout_width="wrap_content"
                            android:text="打折"
                            android:background="@color/orange002"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            app:layout_marginRightPercent="4.44%w"
                            android:visibility="gone"
                            app:layout_marginTopPercent="3%w"
                            android:padding="1dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_gift"
                            android:layout_width="wrap_content"
                            android:text="赠品"
                            android:background="@color/orange002"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            app:layout_marginTopPercent="3%w"
                            android:visibility="gone"
                            android:padding="1dp"
                            android:layout_height="wrap_content" />
                    </com.zhy.android.percent.support.PercentLinearLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:layout_marginRightPercent="4.44%w"
                    android:textColor="@color/green013"
                    android:textSize="16dp"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_Voucher"
            android:layout_width="match_parent"
            app:layout_heightPercent="13.6%w"
            app:layout_marginTopPercent="2.77%w"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="代金卷"
            android:textColor="@color/black007"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="3.05%w"
            app:layout_marginLeftPercent="2.77%w"
            android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_view"
                android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="6.52%w"
                android:text="满199减100"
                android:layout_height="wrap_content" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

    <!-- height:50dp -->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_alipy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_marginTopPercent="1.94%w"
        app:layout_heightPercent="13.89%w">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:background="@color/gray008"/>

        <!-- height:50dp -->
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_iconAlipy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:layout_paddingLeftPercent="40%h"
            app:layout_paddingRightPercent="45%h">


            <!-- width:21dp height:21dp -->
            <ImageView
                android:id="@+id/iv_iconForAlipy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/dl_ch"
                app:layout_heightPercent="42%h"
                app:layout_widthPercent="42%h"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>


        <TextView
            android:id="@+id/tv_alipy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_zfb_zf"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:text="支付宝支付"
            android:textColor="@color/black007"
            app:layout_paddingLeftPercent="50%h"
            app:layout_paddingRightPercent="36%h"
            app:layout_textSizePercent="32%h"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray005"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
