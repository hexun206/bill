    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_goldPay"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="13.6%w"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pric_total"
            android:layout_width="wrap_content"
            android:text="加载中"
            android:layout_centerVertical="true"
            android:textColor="@color/orange002"
            app:layout_marginRightPercent="5.13%w"
            app:layout_textSizePercent="4.44%w"
            android:layout_toLeftOf="@+id/rl_pay"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="合计金额："
            android:layout_centerVertical="true"
            android:textColor="@color/black007"
            android:layout_toLeftOf="@+id/tv_pric_total"
            app:layout_textSizePercent="4.16%w"
            android:layout_height="wrap_content" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_pay"
            android:layout_width="wrap_content"
            app:layout_widthPercent="30.05%w"
            android:layout_alignParentRight="true"
            android:background="@color/gray002"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/toPay"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:textColor="@color/white" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>