    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_goldPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_heightPercent="13.89%w">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/gray008"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_iconGold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:layout_paddingLeftPercent="40%h"
            app:layout_paddingRightPercent="45%h">

            <!-- width:21dp height:21dp -->
            <ImageView
                android:id="@+id/iv_iconForGoldPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/rance_noselect_paymethod"
                app:layout_heightPercent="42%h"
                app:layout_widthPercent="42%h"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tv_goldPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_jb_zf"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:text="@string/goldPay"
            android:textColor="@color/black007"
            app:layout_paddingLeftPercent="50%h"
            app:layout_textSizePercent="32%h"/>

        <TextView
            android:id="@+id/tv_gold_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_goldPay"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:text="(余额0)"
            android:textColor="@color/gray004"
            app:layout_textSizePercent="32%h"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/gray008"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_marginTopPercent="2.77%w"
            app:layout_heightPercent="16.6%w"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_xz"
                android:layout_width="wrap_content"
                android:text="已阅读教师网购课须知并严格遵守"
