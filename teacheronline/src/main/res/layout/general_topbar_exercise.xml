<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_heightPercent="14.03%w">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_titleContainer_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white003"
        app:layout_heightPercent="13.89%w">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            app:layout_widthPercent="13.89%w">

            <ImageView
                android:id="@+id/ib_main_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <LinearLayout
            android:id="@+id/ll_time_exercise_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:format="s%"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:visibility="visible"
                />

            <com.huatu.teacheronline.widget.Anticlockwise
                android:id="@+id/re_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:format="s%"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                />

            <ImageView
                android:id="@+id/img_pause"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/chronometer"
                android:paddingLeft="5dp"
                android:src="@drawable/test_do"
                android:visibility="gone"
                />
            <!--app:layout_widthPercent="4.16%w"-->
            <!--app:layout_heightPercent="4.16%w"-->

        </LinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_errorstore_exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white003"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <!--app:layout_widthPercent="4.16%w"-->
            <!--app:layout_heightPercent="4.16%w"-->
            <ImageView
                android:id="@+id/img_card_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dtk_result"
                app:layout_marginLeftPercent="6.17%w"
                app:layout_marginRightPercent="6.17%w"
                />

            <ImageView
                android:id="@+id/img_del_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_del"
                app:layout_marginLeftPercent="6.17%w"
                app:layout_marginRightPercent="6.17%w"/>

            <ImageView
                android:id="@+id/img_store_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_exercise"
                app:layout_marginLeftPercent="6.17%w"
                app:layout_marginRightPercent="6.17%w"/>

        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:format="s%"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="@string/default_value"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_textSizePercent="5%w"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:layout_marginRightPercent="2.78%w">

            <ImageView
                android:id="@+id/ib_main_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_main_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxEms="4"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray007"
                app:layout_textSizePercent="30%h"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray004"/>
</com.zhy.android.percent.support.PercentLinearLayout>