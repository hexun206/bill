        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:layout_alignParentBottom="true"
            android:background="@color/gray006"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:hint="请描述您发现的问题..."
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="14dp"
        android:scrollbars="none"
        app:layout_heightPercent="39.72%w"
        app:layout_marginTopPercent="2.77%w"
        app:layout_textSizePercent="3.75%w"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/green001"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/white"
        app:layout_heightPercent="11.94%w"
        app:layout_marginTopPercent="8.05%w"
        app:layout_textSizePercent="4.16%w"
        app:layout_widthPercent="91.94%w"/>


</com.zhy.android.percent.support.PercentLinearLayout>