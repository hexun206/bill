        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:layout_alignParentTop="true"
            android:background="@color/gray006"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/exercise_error2"
            android:textColor="@color/gray010"
            app:layout_marginLeftPercent="3.61%w"
            app:layout_textSizePercent="4.44%w"/>

        <ImageView
            android:id="@+id/iv_error2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_no_select"
            app:layout_heightPercent="38%h"
            app:layout_marginLeftPercent="16%h"
            app:layout_marginRightPercent="26%h"
            app:layout_widthPercent="38%h"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:layout_alignParentBottom="true"
            android:background="@color/gray006"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_error3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_heightPercent="16.11%w"
        app:layout_marginTopPercent="2.77%w">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:layout_alignParentTop="true"
            android:background="@color/gray006"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/exercise_error3"
