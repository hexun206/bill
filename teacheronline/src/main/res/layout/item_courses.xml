<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zb_mrt"
            app:layout_heightPercent="50.97%w"
            app:layout_marginBottomPercent="4.17%w"
            app:layout_marginLeftPercent="5.8%w"
            app:layout_marginRightPercent="5.66%w"
            app:layout_marginTopPercent="4.17%w" />
        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="wrap_content"
            app:layout_marginLeftPercent="5.8%w"
            android:text="加载中"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="11dp"
            android:textColor="@color/black007"
            app:layout_marginRightPercent="4.36%w"
            android:layout_height="wrap_content" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_marginTopPercent="1%w"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:textColor="@color/orange002"
                android:text="加载中..."
                app:layout_marginLeftPercent="5.8%w"
                android:textSize="11dp"
                android:layout_height="wrap_content" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_marginTopPercent="1%w"
            android:layout_height="26dp">

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:background="@color/orange002"
                android:text="打折"
                android:gravity="center"
                android:visibility="gone"
                app:layout_marginLeftPercent="5.8%w"
                android:textSize="11dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_hot"
                android:text="0已抢"
                android:drawablePadding="5dp"
                android:textSize="11dp"
                android:textColor="@color/gray013"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="5.66%w"
                android:layout_height="wrap_content" />

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
