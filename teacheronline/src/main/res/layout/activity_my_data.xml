<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.huatu.teacheronline.vipexercise.MyDataActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/general_vip_topbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/chat_refresh_layout"
        android:background="@color/gray"
        android:layout_width="match_parent"
        app:layout_marginRightPercent="2.1%w"
        app:layout_marginLeftPercent="2.1%w"
        android:layout_height="wrap_content">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:divider="@color/gray"
        android:dividerHeight="10dp"
        android:cacheColorHint="#00000000"
        android:paddingTop="7dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:layout_height="wrap_content"></ListView>
</android.support.v4.widget.SwipeRefreshLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_heightPercent="60.4%w"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pc"
            android:layout_width="wrap_content"
            android:src="@drawable/pic_zwzl"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="暂无资料"
            android:layout_below="@+id/iv_pc"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="4.58%w"
            android:textColor="@color/gray013"
            app:layout_textSizePercent="3.88%w"
            android:layout_height="wrap_content" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
