<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

    <View
        android:id="@+id/v_interval"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white001"
        app:layout_heightPercent="2.78%w"/>

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/v_interval"
        android:background="@color/gray005"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@id/v_line1"
        app:layout_heightPercent="26.67%w"
        app:layout_paddingLeftPercent="3.61%w">

        <TextView
            android:id="@+id/tv_categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/default_value"
            android:textColor="@color/gray010"
            app:layout_marginTopPercent="6.39%w"
            app:layout_textSizePercent="4.17%w"/>

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_categoryName"
            android:text="@string/default_value"
            android:textColor="#0DB790"
            app:layout_marginTopPercent="8%w"
            app:layout_textSizePercent="3.61%w"/>

        <TextView
            android:id="@+id/tv_correctpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_categoryName"
            android:layout_toRightOf="@id/tv_complete"
            android:text="@string/default_value"
            android:textColor="@color/gray014"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginTopPercent="8%w"
            app:layout_textSizePercent="3.61%w"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_categoryName"
            android:layout_toRightOf="@id/tv_correctpercent"
            android:text="@string/default_value"
            android:textColor="@color/gray014"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginTopPercent="8%w"
            app:layout_textSizePercent="3.61%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/rl_content"
        android:background="@color/gray005"/>
</com.zhy.android.percent.support.PercentRelativeLayout>