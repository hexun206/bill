<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/top_bar"
        layout="@layout/x_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:scrollbars="none">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_period"
                android:layout_toRightOf="@+id/tv_area"
                android:textColor="@color/white"
                android:text="中学"
                android:background="@drawable/bg_choose_parame_green3"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="-12dp"
                app:layout_textSizePercent="3.89%w"
                app:layout_marginTopPercent="1%w"
                android:layout_height="wrap_content"
                app:layout_heightPercent="7.78%w"
                />
            <TextView
                android:id="@+id/tv_area"
                android:layout_toRightOf="@+id/tv_choose_examstage"
                android:textColor="@color/white"
                android:text="厦门"
                android:background="@drawable/bg_choose_parame_green2"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="-12dp"
                app:layout_textSizePercent="3.89%w"
                app:layout_marginTopPercent="1%w"
                android:layout_height="wrap_content"
                app:layout_heightPercent="7.78%w"
                />
            <TextView
                android:id="@+id/tv_choose_examstage"
                android:textColor="@color/white"
                android:text="国考教师资格证"
                android:background="@drawable/bg_choose_parame_green"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="8dp"
                app:layout_textSizePercent="3.89%w"
                app:layout_marginTopPercent="1%w"
                android:layout_height="wrap_content"
                app:layout_heightPercent="7.78%w"
                />

            <TextView
                android:id="@+id/tv_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black007"
                android:text="请选择科目"
                android:textStyle="bold"
                app:layout_textSizePercent="5%w"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginTopPercent="14.3%w"
                />
            <TextView
                android:id="@+id/tv_choose_mind"
                android:layout_below="@+id/tv_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray013"
                app:layout_marginLeftPercent="5%w"
                android:text="科目可进行多选"
                app:layout_textSizePercent="3.33%w"
                />
            <com.huatu.teacheronline.widget.CustomGridView
                android:id="@+id/gv_examsubject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_choose_mind"
                android:divider="@null"
                android:numColumns="1"
                app:layout_marginPercent="4.17%w"
                android:dividerHeight="0dp"/>

            <!--<TextView-->
                <!--android:id="@+id/tv_next_step"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_below="@id/lv_examsubject"-->
                <!--android:background="@drawable/bg_rectangle_green"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/complete"-->
                <!--android:textColor="@color/white"-->
                <!--app:layout_heightPercent="11.94%w"-->
                <!--app:layout_marginBottomPercent="5.28%w"-->
                <!--app:layout_marginLeftPercent="4.03%w"-->
                <!--app:layout_marginRightPercent="4.03%w"-->
                <!--app:layout_marginTopPercent="5.28%w"-->
                <!--app:layout_textSizePercent="4.17%w"/>-->

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentRelativeLayout>