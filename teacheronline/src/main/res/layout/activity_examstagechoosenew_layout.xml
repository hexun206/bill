<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/x_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_period"
        android:layout_toRightOf="@+id/tv_area"
        android:textColor="@color/white"
        android:text="中学"
        android:background="@drawable/bg_choose_parame_green3"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:layout_marginLeft="-12dp"
        app:layout_textSizePercent="3.89%w"
        app:layout_marginTopPercent="14.86%w"
        android:layout_height="wrap_content"
        app:layout_heightPercent="7.78%w"
        />
    <TextView
        android:id="@+id/tv_area"
        android:layout_toRightOf="@+id/tv_choose_examstage"
        android:textColor="@color/white"
        android:text="厦门"
        android:background="@drawable/bg_choose_parame_green2"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:layout_marginLeft="-12dp"
        app:layout_textSizePercent="3.89%w"
        app:layout_marginTopPercent="14.86%w"
        android:layout_height="wrap_content"
        app:layout_heightPercent="7.78%w"
        />
    <TextView
        android:id="@+id/tv_choose_examstage"
        android:textColor="@color/white"
        android:text="国考教师资格证"
        android:background="@drawable/bg_choose_parame_green"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="8dp"
        app:layout_textSizePercent="3.89%w"
        app:layout_marginTopPercent="14.86%w"
        android:layout_height="wrap_content"
        app:layout_heightPercent="7.78%w"
        />
    <TextView
        android:id="@+id/tv_choose_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black007"
        android:text="请选择学段"
        android:textStyle="bold"
        app:layout_textSizePercent="5%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginTopPercent="28.19%w"
        />
    <TextView
        android:id="@+id/tv_choose_mind"
        android:layout_below="@+id/tv_choose_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray013"
        app:layout_marginLeftPercent="5%w"
        android:visibility="gone"
        android:text="该信息可随时在“我的”页面进行修改"
        app:layout_textSizePercent="3.33%w"
        />

    <TextView
        android:id="@+id/tv_preschool_education"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="幼教"
        android:textColor="@color/text_check_select"
        android:background="@drawable/btn_choose_parameter_selector"
        app:layout_heightPercent="12.5%w"
        app:layout_marginLeftPercent="11.81%w"
        app:layout_marginRightPercent="11.81%w"
        app:layout_marginTopPercent="45.16%w"
        app:layout_textSizePercent="4.17%w"/>
    <TextView
        android:id="@+id/tv_primary"
        android:layout_below="@+id/tv_preschool_education"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="小学"
        android:textColor="@color/text_check_select"
        android:background="@drawable/btn_choose_parameter_selector"
        app:layout_heightPercent="12.5%w"
        app:layout_marginLeftPercent="11.81%w"
        app:layout_marginRightPercent="11.81%w"
        app:layout_marginTopPercent="5.86%w"
        app:layout_textSizePercent="4.17%w"/>

    <TextView
        android:id="@+id/tv_secondary"
        android:layout_below="@+id/tv_primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="中学"
        android:textColor="@color/text_check_select"
        android:background="@drawable/btn_choose_parameter_selector"
        app:layout_heightPercent="12.5%w"
        app:layout_marginLeftPercent="11.81%w"
        app:layout_marginRightPercent="11.81%w"
        app:layout_marginTopPercent="5.86%w"
        app:layout_textSizePercent="4.17%w"/>
