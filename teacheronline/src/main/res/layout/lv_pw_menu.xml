<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_kemuxialaa"
    android:maxHeight="65.0dip"
    android:paddingTop="20.0dip">
    <RelativeLayout
        android:id="@+id/rl_lvsubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_pop_list"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:cacheColorHint="@null"
            android:scrollbars="none" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_creat_sub"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_lvsubs"
        android:gravity="center"
        android:layout_height="30dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_tianjiakemu"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加科目"
            android:textColor="#C4C4C4"
            android:textSize="14dp"
            android:id="@+id/ccc"
            />
    </LinearLayout>


</RelativeLayout>
