<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_heightPercent="14.03%w">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_titleContainer_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green004"
        app:layout_heightPercent="12.22%w">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/top_bg"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            app:layout_marginRightPercent="7.08%w"
            android:layout_height="match_parent" />
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="13.89%w">
            <ImageView
                android:id="@+id/iv_main_left"
                android:layout_width="wrap_content"
                app:layout_marginLeftPercent="23.75%w"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:layout_marginBottomPercent="26.75%w"
                android:layout_alignParentBottom="true"
                android:src="@drawable/last_month_f"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:format="s%"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:layout_marginBottomPercent="2.63%w"
            android:lines="1"
            android:text=""
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_marginLeftPercent="13.66%w"
            app:layout_marginRightPercent="13.66%w"
            app:layout_textSizePercent="5%w"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_right"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="3.08%w">

            <TextView
            android:id="@+id/tv_main_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            app:layout_textSizePercent="28%h"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray004"/>
</com.zhy.android.percent.support.PercentLinearLayout>