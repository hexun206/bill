<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white001">

    <include
        android:id="@+id/topbar"
        layout="@layout/general_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_non_exerciseevaluation"
        android:layout_below="@+id/top_bar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_non_exerciseevaluation"
            android:layout_width="wrap_content"
            android:background="@drawable/kong_zhenticeping"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="没有收录真题"
            android:textSize="17dp"
            android:textColor="#a5a5a5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_non_exerciseevaluation"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- height:38dp -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_select"
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:visibility="gone"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_heightPercent="10.55%w">

        <RelativeLayout
            android:id="@+id/rl_default_sort"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_default_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Gufen"
                android:layout_centerInParent="true"
                android:textColor="@color/green001"
                app:layout_textSizePercent="39.47%h"/>
            <View
                android:layout_width="1px"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/gray003"
                android:layout_height="match_parent"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/competition"
                android:textColor="@color/black"
                app:layout_textSizePercent="39.47%h"/>
        </RelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        android:id="@+id/view_li"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/ll_select"
        android:visibility="gone"
        android:background="@color/gray004"/>
    <ListView
        android:id="@+id/lv_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_li"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:visibility="gone"
        android:background="@color/white001">

        <ImageView
            android:id="@+id/iv_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mkds_none"
            app:layout_marginTopPercent="34.72%w" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_nodata"
            android:layout_centerHorizontal="true"
            android:text="模考大赛尚未开始"
            android:textColor="@color/gray003"
            app:layout_marginTopPercent="6.69%w"
            app:layout_textSizePercent="4.46%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_wifi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_select"
        android:background="@color/white001"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wifi"
            app:layout_heightPercent="31.94%w"
            app:layout_marginTopPercent="34.72%w"
            app:layout_widthPercent="39.44%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_wifi"
            android:layout_centerHorizontal="true"
            android:text="@string/network"
            android:textColor="@color/gray003"
            app:layout_marginTopPercent="10.69%w"
            app:layout_textSizePercent="4.16%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
