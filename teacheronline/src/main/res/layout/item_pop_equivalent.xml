<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_heightPercent="88.6%w"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_heightPercent="9.6%w"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="赠品明细"
                app:layout_textSizePercent="4.44%w"
                android:textColor="@color/gray007"
                android:padding="1dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_canle"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_shut"
                android:layout_centerVertical="true"
                app:layout_marginRightPercent="2.77%w"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <ListView
            android:id="@+id/lv_pop"
            android:layout_width="match_parent"
            app:layout_marginTopPercent="2.22%w"
            android:divider="@null"
            android:layout_height="match_parent">


        </ListView>
    </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout >
