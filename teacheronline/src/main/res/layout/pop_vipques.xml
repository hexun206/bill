<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rl_pop_vip"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
       android:layout_width="110dp"
       android:layout_alignParentRight="true"
       android:orientation="vertical"
        android:background="@drawable/xiala_wcwq"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
       android:layout_height="85dp">

        <!--<ImageView-->
            <!--android:layout_width="120dp"-->
            <!--android:src="@drawable/xiala_w"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:id="@+id/ll_myError"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_jcbt_vip"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="我的错题"
                android:textColor="@color/green013"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:textSize="14dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/v_fg"
            android:layout_width="match_parent"
            android:background="@color/green013"
            android:layout_below="@+id/ll_myError"
            android:layout_marginTop="8dp"
            android:layout_height="1px"></View>


        <RelativeLayout
            android:id="@+id/rl_mymessage"
            android:layout_width="wrap_content"
            android:layout_below="@+id/v_fg"
            android:layout_marginTop="8dp"
            android:layout_height="26dp">


            <ImageView
                android:id="@+id/iv_tb"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_wdly_vip"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_vip_popred"
                android:layout_width="wrap_content"
                android:src="@drawable/prepos"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="我的留言"
                android:textColor="@color/green013"
                android:layout_toRightOf="@+id/iv_tb"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>