<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_canle"
            android:layout_above="@+id/ll_bj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_bj"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_heightPercent="98.6%w"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_heightPercent="9.6%w"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="选择支付方式"
                app:layout_textSizePercent="4.44%w"
                android:textColor="@color/gray007"
                android:padding="1dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <!--<ImageView-->
                <!--android:id="@+id/iv_canle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:src="@drawable/ic_shut"-->
                <!--android:layout_centerVertical="true"-->
                <!--app:layout_marginRightPercent="2.77%w"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_height="wrap_content" />-->
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            app:layout_marginTopPercent="3.27%w"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pop_price"
                android:layout_width="wrap_content"
                android:text="加载中"
                app:layout_textSizePercent="9.3%w"
                android:layout_centerInParent="true"
                android:textColor="@color/black007"
                android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_alipy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_marginTopPercent="5.55%w"
            app:layout_heightPercent="13.89%w">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:visibility="gone"
                android:background="@color/gray008"/>

            <!-- height:50dp -->
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_iconAlipy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                app:layout_paddingLeftPercent="40%h"
                app:layout_paddingRightPercent="45%h">


                <!-- width:21dp height:21dp -->
                <ImageView
                    android:id="@+id/iv_iconForAlipy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dl_ch"
                    app:layout_heightPercent="42%h"
                    app:layout_widthPercent="42%h"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>


            <TextView
                android:id="@+id/tv_alipy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_zfb_zf"
                android:drawablePadding="9dp"
                android:gravity="center"
                android:text="支付宝支付"
                android:textColor="@color/black007"
                app:layout_paddingLeftPercent="50%h"
                app:layout_paddingRightPercent="36%h"
                app:layout_textSizePercent="32%h"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray005"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>
        <!-- height:50dp -->
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_weixinpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_heightPercent="13.89%w">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="@color/white001"/>

            <!-- height:50dp -->
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_iconWeixinpay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                app:layout_paddingLeftPercent="40%h"
                app:layout_paddingRightPercent="45%h">

                <!-- width:21dp height:21dp -->
                <ImageView
                    android:id="@+id/iv_iconForWeixinpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/rance_noselect_paymethod"
                    app:layout_heightPercent="42%h"

                    app:layout_widthPercent="42%h"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>


            <TextView
                android:id="@+id/tv_weixinpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_wx_zf"
                android:drawablePadding="9dp"
                android:gravity="center"
                android:text="微信支付"
                android:textColor="@color/black007"
                app:layout_paddingLeftPercent="50%h"
                app:layout_paddingRightPercent="36%h"
                app:layout_textSizePercent="32%h"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/white001"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!-- height:50dp -->
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_goldPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_heightPercent="13.89%w">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="@color/gray008"/>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_iconGold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                app:layout_paddingLeftPercent="14%h"
                app:layout_paddingRightPercent="45%h">

                <!-- width:21dp height:21dp -->
                <ImageView
                    android:id="@+id/iv_iconForGoldPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/rance_noselect_paymethod"
                    app:layout_heightPercent="42%h"
                    app:layout_widthPercent="42%h"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <ImageView
                android:id="@+id/iv_sdv"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_jb_zf"
                android:layout_centerVertical="true"
                app:layout_paddingLeftPercent="50%h"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_goldPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/goldPay"
                app:layout_paddingLeftPercent="20%h"
                app:layout_marginTopPercent="1.66%w"

                android:layout_toRightOf="@+id/iv_sdv"
                android:textColor="@color/black007"
                app:layout_textSizePercent="32%h"/>

            <TextView
                android:id="@+id/tv_gold_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="9dp"
                android:layout_toRightOf="@+id/tv_goldPay"
                android:gravity="center"
                app:layout_marginTopPercent="1.66%w"
                android:text="(余额0)"
                android:textColor="@color/gray004"
                app:layout_textSizePercent="32%h"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="使用任务金币支付超过20%不予返现"
                android:layout_below="@+id/tv_gold_balance"
                android:layout_toRightOf="@+id/iv_sdv"
                app:layout_paddingLeftPercent="20%h"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray008"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_goldPay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_heightPercent="13.89%w">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="@color/gray008"/>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_iconGold1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                app:layout_paddingLeftPercent="14%h"
                app:layout_paddingRightPercent="45%h">

                <!-- width:21dp height:21dp -->
                <ImageView
                    android:id="@+id/iv_iconForGoldPay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/rance_noselect_paymethod"
                    app:layout_heightPercent="42%h"
                    app:layout_widthPercent="42%h"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <ImageView
                android:id="@+id/iv_sdv1"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_jb_zf"
                android:layout_centerVertical="true"
                app:layout_paddingLeftPercent="50%h"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_goldPay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/goldPay"
                app:layout_paddingLeftPercent="20%h"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_sdv1"
                android:textColor="@color/black007"
                app:layout_textSizePercent="32%h"/>

            <TextView
                android:id="@+id/tv_gold_balance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="9dp"
                android:layout_toRightOf="@+id/tv_goldPay1"
                android:layout_centerVertical="true"
                android:text="(余额0)"
                android:textColor="@color/gray004"
                app:layout_textSizePercent="32%h"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray008"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_pop_pay"
            android:layout_width="match_parent"
            app:layout_heightPercent="13.6%w"
            android:background="@color/green013"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="马上支付"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                app:layout_textSizePercent="4.16%w"
                android:layout_height="wrap_content" />

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
