<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:background="@color/white">

    <View
        android:id="@+id/v_interval"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white001"
        app:layout_heightPercent="2.78%w"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_interval">

        <TextView
            android:id="@+id/tv_examname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/default_value"
            android:ellipsize="end"
            android:maxEms="17"
            android:singleLine="true"
            android:textColor="@color/gray010"
            app:layout_paddingLeftPercent="3.61%w"
            app:layout_paddingTopPercent="6.11%w"
            app:layout_paddingBottomPercent="6.11%w"
            app:layout_textSizePercent="4.17%w"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right_typ3"
            app:layout_heightPercent="6.11%w"
            app:layout_marginRightPercent="5.28%w"
            app:layout_widthPercent="3.89%w"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>