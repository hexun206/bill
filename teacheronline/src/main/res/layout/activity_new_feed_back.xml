<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huatu.teacheronline.personal.NewFeedBackActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <include
        android:id="@+id/top_bar"
        layout="@layout/general_topbar_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="11.11%w"
        android:layout_height="wrap_content">

   <TextView
       android:layout_width="wrap_content"
       android:text="请填写手机信息"
       android:layout_centerVertical="true"
       app:layout_textSizePercent="3.33%w"
       app:layout_marginLeftPercent="3.05%w"
       android:textColor="@color/gray007"
       android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="13.88%w"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_xh"
            android:layout_width="wrap_content"
            android:text="手机型号"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="3.6%w"
            app:layout_marginLeftPercent="3.05%w"
            android:textColor="@color/black007"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_toRightOf="@+id/tv_xh"
            android:hint="请输入手机型号"
            android:textColorHint="@color/gray013"
            app:layout_textSizePercent="3.6%w"
            app:layout_marginRightPercent="13.05%w"
            app:layout_marginLeftPercent="3.22%w"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray005"></View>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="13.88%w"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_xt"
            android:layout_width="wrap_content"
            android:text="系统版本"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="3.6%w"
            app:layout_marginLeftPercent="3.05%w"
            android:textColor="@color/black007"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_version"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_toRightOf="@+id/tv_xt"
            android:hint="请选择系统版本"
            app:layout_textSizePercent="3.6%w"
            android:textColorHint="@color/gray013"
            app:layout_marginRightPercent="13.05%w"
            app:layout_marginLeftPercent="3.22%w"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/width_1"-->
        <!--android:background="@color/gray005"></View>-->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="11.11%w"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="问题和意见"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="3.6%w"
            app:layout_marginLeftPercent="3.05%w"
            android:textColor="@color/gray007"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_width="match_parent"
        >
        <EditText
            android:id="@+id/et_content"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            app:layout_heightPercent="23.13%w"
            android:hint="@string/feedback"
            android:gravity="left"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:paddingRight="14dp"
            android:textColorHint="@color/gray013"
            app:layout_textSizePercent="3.6%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="11.11%w"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="添加图片  (选填，提供问题截图)"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="3.6%w"
            app:layout_marginLeftPercent="3.05%w"
            android:textColor="@color/gray007"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_heightPercent="30.13%w"
        android:layout_width="match_parent">

        <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
            android:id="@+id/snpl_moment_add_photos"
            android:layout_margin="5dp"
            style="@style/WrapWrap"
            app:bga_snpl_deleteDrawable="@drawable/ic_pic_del"
            app:bga_snpl_deleteDrawableOverlapQuarter="true"
            app:bga_snpl_editable="true"
            app:bga_snpl_itemCornerRadius="0dp"
            app:bga_snpl_itemSpanCount="3"
            app:bga_snpl_itemWhiteSpacing="10dp"
            app:bga_snpl_itemWidth="0dp"
            app:bga_snpl_maxItemCount="9"
            app:bga_snpl_otherWhiteSpacing="100dp"
            app:bga_snpl_placeholderDrawable="@drawable/bga_pp_ic_holder_dark"
            app:bga_snpl_plusDrawable="@drawable/pic_addpic"
            app:bga_snpl_plusEnable="true"
            app:bga_snpl_sortable="true"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
       <com.zhy.android.percent.support.PercentLinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_heightPercent="28.13%w">
       </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>

   </ScrollView>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/tv_Submit"
        android:layout_width="match_parent"
         android:layout_alignParentBottom="true"
        app:layout_heightPercent="13.88%w"
        android:background="@color/green012"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="提交"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
