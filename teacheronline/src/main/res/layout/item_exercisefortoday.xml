<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray005"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/tv_categoryName"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/v_line1"
        android:lines="1"
        android:text="@string/default_value"
        android:textColor="@color/black"
        app:layout_heightPercent="19.17%w"
        app:layout_paddingLeftPercent="3.89%w"
        app:layout_paddingRightPercent="25%w"
        app:layout_paddingTopPercent="3.89%w"
        app:layout_textSizePercent="4.44%w"/>

    <TextView
        android:id="@+id/tv_exerciseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/v_line1"
        android:text="@string/default_num_value"
        android:textColor="@color/black"
        app:layout_marginRightPercent="17.22%w"
        app:layout_marginTopPercent="3.89%w"
        app:layout_textSizePercent="4.44%w"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_pen"
        app:layout_heightPercent="5.28%w"
        app:layout_marginRightPercent="3.89%w"
        app:layout_marginTopPercent="7%w"
        app:layout_widthPercent="4.44%w"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        android:progress="50"
        android:progressDrawable="@drawable/laryer_progressbar"
        app:layout_heightPercent="2.08%w"
        app:layout_marginLeftPercent="3.89%w"
        app:layout_marginRightPercent="17.22%w"
        app:layout_marginTopPercent="11.67%w"/>

    <View
        android:id="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@+id/tv_categoryName"
        android:background="@color/gray005"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@id/v_line2"
        android:background="@color/white001"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>