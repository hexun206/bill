<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_left_teacher"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            app:layout_widthPercent = "9.72%w"
            app:layout_heightPercent = "9.72%w"
            app:layout_marginLeftPercent = "4.17%w"
            app:layout_marginTopPercent = "2.78%w"
            app:layout_marginBottomPercent = "2.78%w"
            android:id="@+id/img_head_leav_message"
            android:layout_width="wrap_content"
            android:background="@drawable/vsdsds"
            android:layout_height="wrap_content"
            />

        <TextView
            android:background="@drawable/oval_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_marginTopPercent = "1.11%w"
            app:layout_marginLeftPercent = "11.8%w"
            app:layout_textSizePercent = "3.33%w"
            android:layout_alignParentTop="true"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/textView3"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="林少傅"
            android:textColor="@color/black007"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_head_leav_message"
            app:layout_textSizePercent = "3.89%w"
            app:layout_paddingLeftPercent = "5.56%w"
            android:id="@+id/textView5"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="老师，您的私人微信号多少"
            app:layout_paddingLeftPercent = "5.56%w"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray002"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_textSizePercent = "3.33%w"
            android:layout_below="@+id/textView5"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toRightOf="@+id/img_head_leav_message"
            android:layout_toEndOf="@+id/img_head_leav_message"/>

        <TextView
            app:layout_textSizePercent="3.33%w"
            android:layout_width="wrap_content"
            android:text="15:20"
            android:textColor="@color/gray002"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_marginRightPercent = "1.39%w"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
