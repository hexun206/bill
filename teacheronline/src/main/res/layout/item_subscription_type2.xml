<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_list_subscription_itemType3">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray020"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_toLeftOf="@+id/iv_listview_subscription_itemType2"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="2015年公务员职位表公布了，看看有没有你适合的岗位"
        android:id="@+id/tv_listview_subscription_itemType2"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_listview_subscription_itemType2"/>
</RelativeLayout>
