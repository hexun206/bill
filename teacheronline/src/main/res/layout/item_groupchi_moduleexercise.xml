<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line1"
            app:layout_heightPercent="22.78%w">

            <View
                android:id="@+id/view_line"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                app:layout_marginLeftPercent="15.27%w"
                app:layout_marginRightPercent="3.19%w"
                android:background="@color/gray004"
                />
            <TextView
                android:id="@+id/tv_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/v_line5"
                android:text="@string/default_value"
                app:layout_paddingLeftPercent="0.69%w"
                android:textColor="@color/black"
                app:layout_marginTopPercent="4.44%w"
                app:layout_textSizePercent="3.89%w"
                />
            <ImageView
                android:id="@+id/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_arrow"
                app:layout_marginRightPercent="3.06%w"
                />

            <RatingBar
                android:id="@+id/chile_ratingBar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/v_line5"
                android:numStars="5"
                android:stepSize="20"
                android:isIndicator="true"
                app:layout_heightPercent="5%w"
                app:layout_marginBottomPercent="5.27%w"
                />

            <View
                android:id="@+id/v_line4"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:visibility="gone"
                app:layout_marginLeftPercent="5.36%w"
                app:layout_heightPercent="6.66%w"
                android:background="@color/green004"
            />
            <View
                android:id="@+id/v_line6"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                app:layout_marginLeftPercent="5.36%w"
                android:background="@color/green004"
            />
            <View
                android:id="@+id/v_line5"
                android:layout_height="1dp"
                android:layout_width="wrap_content"
                app:layout_marginLeftPercent="5.56%w"
                app:layout_marginTopPercent="6.59%w"
                app:layout_widthPercent="9.17%w"
                android:background="@color/green004"
                />
            <TextView
                android:id="@+id/tv_group_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/icon_arrow_right"
                android:text="10/100"
                android:layout_centerVertical="true"
                android:textColor="@color/gray013"
                app:layout_marginTopPercent="10%w"
                app:layout_textSizePercent="3.89%w"/>



        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>