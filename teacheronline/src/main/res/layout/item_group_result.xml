<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15.72%w"
            >
            <ImageView
                android:id="@+id/img_expanable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_expanable"
                app:layout_marginTopPercent="4.12%w"
                app:layout_marginLeftPercent="3.33%w"
                />

            <TextView
                android:id="@+id/tv_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_expanable"
                android:text="@string/default_value"
                app:layout_marginTopPercent="3.89%w"
                android:textColor="@color/black"
                app:layout_marginLeftPercent="2.22%w"
                app:layout_textSizePercent="3.89%w"
                />

            <TextView
                android:id="@+id/tv_group"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray013"
                android:text="@string/default_value"
                android:layout_below="@+id/tv_categoryName"
                android:layout_toRightOf="@+id/img_expanable"
                android:visibility="visible"
                app:layout_heightPercent="5%w"
                app:layout_marginLeftPercent="2.22%w"
                app:layout_textSizePercent="3.06%w"
                />

            <View
                android:id="@+id/v_line4"
                android:layout_width="1dp"
                android:visibility="visible"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="5.36%w"
                android:background="@color/green004"
                android:layout_below="@+id/img_expanable"/>

            <View
                android:id="@+id/v_line7"
                android:layout_width="30dp"
                android:visibility="visible"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                app:layout_widthPercent="8.5%w"
                android:layout_below="@+id/img_expanable"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>