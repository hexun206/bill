<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_heightPercent="11.11%w"
                                                       android:background="@color/white">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_deatil_live_username"
            android:text="夜光双树"
            app:layout_textSizePercent="4.03%w"
            android:textColor="@color/gray010"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_deatil_live_time"
            android:layout_alignParentRight="true"
            android:text="10 : 08"
            app:layout_textSizePercent="3.33%w"
            android:textColor="@color/gray014"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.gensee.view.MyTextViewEx
        android:layout_below="@+id/rl_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="18dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_deatil_live_msg"
        android:lineSpacingExtra="8dp"
        app:layout_textSizePercent="4.03%w"
        android:textColor="@color/gray010"
        android:text="望系统升级复习中基础为零，做题交做题交易出错础为零，做题交易出错希望系统升级复"/>

    <View
        android:layout_below="@+id/tv_deatil_live_msg"
        app:layout_marginLeftPercent="6.38%w"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray006"/>
</com.zhy.android.percent.support.PercentRelativeLayout>
