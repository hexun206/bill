<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white001">

    <include
        android:id="@+id/topbar"
        layout="@layout/general_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_non_exerciseevaluation"
        android:layout_below="@+id/top_bar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_non_exerciseevaluation"
            android:layout_width="wrap_content"
            android:background="@drawable/kong_zhenticeping"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="该年份没有收录真题"
            android:textSize="17dp"
            android:textColor="#a5a5a5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_non_exerciseevaluation"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- height:38dp -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_select"
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_heightPercent="10.55%w">

        <RelativeLayout
            android:id="@+id/rl_default_sort"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_default_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payDirect"
                android:textColor="@color/green001"
                app:layout_textSizePercent="39.47%h"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select"
                android:drawableRight="@drawable/ic_shaixuan"
                android:textColor="@color/black"
                android:drawablePadding="3dp"
                app:layout_textSizePercent="39.47%h"/>
        </RelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <ListView
        android:id="@+id/lv_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_select"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"/>

    <ScrollView
        android:id="@+id/sv_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_select"
        android:scrollbars="none"
        android:background="@color/white"
        android:visibility="gone">

        <include
            layout="@layout/layout_screen_evaluation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></include>
    </ScrollView>
</com.zhy.android.percent.support.PercentRelativeLayout>