<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    android:id="@+id/ll_live_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--height:233dp-->
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_playlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/top_bar"
                app:layout_heightPercent="64.72%w">

                <!-- height:220dp -->
                <com.gensee.view.GSVideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

                <!-- height:220dp -->
                <com.gensee.view.GSDocViewGx
                    android:id="@+id/docView"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!-- 视频和ppt切换的图标 -->
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="73dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_ppt"/>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/rl_deatil_waiting"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_waiting"
                    android:gravity="center"
                    android:visibility="visible">

                    <ProgressBar
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:indeterminateDrawable="@anim/anim_direct_loading"
                        android:indeterminateDuration="1500"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_main_living"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@drawable/ic_pic_zb_fail"
                    android:layout_height="match_parent"/>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/rl_living_fail"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_main_living_fail"
                        android:layout_width="match_parent"
                        android:background="@drawable/ic_pic_zb_fail"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/img_refresh_living"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        app:layout_marginLeftPercent="10.5%w"
                        app:layout_marginBottomPercent="26.1%w"
                        android:background="@drawable/ic_zb_ref"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_refresh_living"
                        android:layout_toRightOf="@+id/img_refresh_living"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:layout_marginBottomPercent="29.5%w"
                        app:layout_marginLeftPercent="1.5%w"
                        android:text="直播获取失败"
                        android:textColor="@color/white"
                        app:layout_textSizePercent="5.94%w"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toRightOf="@+id/img_refresh_living"
                        android:layout_alignParentBottom="true"
                        app:layout_marginLeftPercent="1.5%w"
                        app:layout_marginBottomPercent="24.8%w"
                        android:layout_width="wrap_content"
                        android:text="请稍后点击刷新"
                        android:textColor="@color/white"
                        app:layout_textSizePercent="3.94%w"
                        android:layout_height="wrap_content"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <ImageView
                    android:id="@+id/img_play_main"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    app:layout_marginLeftPercent="3.5%w"
                    app:layout_marginBottomPercent="3.5%w"
                    android:background="@drawable/ic_bt_play"
                    android:layout_height="wrap_content"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:layout_marginLeftPercent="2.5%w"
                app:layout_marginRightPercent="2.5%w"
                app:layout_heightPercent="22.4%w"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:background="@color/white"
                    android:scrollbars="none"/>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/rl_direlist_mian"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_refresh_dire"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_zbkc_fail"
                        app:layout_marginLeftPercent="23.5%w"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_refresh_dire"
                        android:layout_toRightOf="@+id/img_refresh_dire"
                        android:layout_width="wrap_content"
                        app:layout_marginLeftPercent="1.5%w"
                        app:layout_marginTopPercent="8%w"
                        android:text="直播获取失败"
                        android:textColor="@color/gray004"
                        app:layout_textSizePercent="5.94%w"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toRightOf="@+id/img_refresh_dire"
                        android:layout_below="@+id/tv_refresh_dire"
                        app:layout_marginLeftPercent="1.5%w"
                        android:layout_width="wrap_content"
                        android:text="请稍后点击刷新"
                        android:textColor="@color/gray004"
                        app:layout_textSizePercent="3.94%w"
                        android:layout_height="wrap_content"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
            </com.zhy.android.percent.support.PercentRelativeLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>




</com.zhy.android.percent.support.PercentLinearLayout>