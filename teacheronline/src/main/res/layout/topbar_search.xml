<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:orientation="vertical"
                                                     app:layout_heightPercent="14.03%w">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_titleContainer_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white003"
        app:layout_heightPercent="13.89%w">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            app:layout_widthPercent="13.89%w">

            <ImageView
                android:id="@+id/ib_main_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/rl_main_left"
            android:layout_toLeftOf="@+id/rl_main_right"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/edit_main_title"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_search_green"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingRight="10dp"
                android:textColor="@color/black000"
                app:layout_textSizePercent="5.16%w"
                app:layout_marginTopPercent="7.78%w"
                app:layout_paddingLeftPercent="11.81%w"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_search_zhibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </com.zhy.android.percent.support.PercentRelativeLayout>


        <!-- 右边按钮-->
        <!--width:50dp-->
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            app:layout_widthPercent="13.89%w">

            <TextView
                android:id="@+id/tv_main_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxEms="2"
                android:singleLine="true"
                android:text="@string/text_search"
                android:textColor="@color/gray007"
                app:layout_textSizePercent="30%h"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:background="@color/gray004"/>
</com.zhy.android.percent.support.PercentLinearLayout>