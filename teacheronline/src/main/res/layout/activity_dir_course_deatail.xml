<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.huatu.teacheronline.personal.DirectCourseActivity">

    <include
        android:id="@+id/topbar"
        layout="@layout/general_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        app:layout_marginTopPercent="3.05%w"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="未加载..."
            app:layout_marginTopPercent="2.22%w"
            android:textColor="@color/black007"
            app:layout_marginRightPercent="3.47%w"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_textSizePercent="3.88%w"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_class_content"
            android:layout_width="wrap_content"
            android:text="未加载..."
            app:layout_marginTopPercent="1.22%w"
            android:textColor="@color/black007"
            app:layout_marginRightPercent="3.47%w"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_textSizePercent="3.88%w"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:text="未加载..."
            app:layout_marginTopPercent="0.22%w"
            android:textColor="@color/black007"
            app:layout_marginRightPercent="3.47%w"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_textSizePercent="3.88%w"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:text="未加载..."
            app:layout_marginTopPercent="0.22%w"
            android:textColor="@color/black007"
            app:layout_marginRightPercent="3.47%w"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_textSizePercent="3.88%w"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_reminder"
            android:layout_width="wrap_content"
            android:text="未加载..."
            app:layout_marginTopPercent="0.22%w"
            android:textColor="@color/black007"
            app:layout_marginRightPercent="3.47%w"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_textSizePercent="3.88%w"
            android:layout_height="wrap_content" />

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>

