<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- width:260dp -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_black_direct"
        android:orientation="vertical"
        app:layout_widthPercent="88.89%w">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_appraise_top"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_heightPercent="12.5%w"
            >

            <TextView
                android:id="@+id/tv_title_appraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主讲：格里芬"
                android:textColor="@color/white"
                app:layout_textSizePercent="5%w"/>

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_appraise_main_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.huatu.teacheronline.widget.AppraiseRatingBar
                android:id="@+id/rb_teacher_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_teacher_main"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_head_mian_teacher"
                app:layout_heightPercent="9.38%w"
                app:layout_marginBottomPercent="7.1%w"
                app:layout_marginTopPercent="6.1%w"
                app:starCount="5"
                app:starEmpty="@drawable/ic_star_i"
                app:starFill="@drawable/ic_star_ii"
                app:starHalf="@drawable/ic_star_ii"
                app:starImageSize="30dp"
                app:starPadding="8dp"
                app:starStep="0"
                app:stepSize="Full"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/ll_edit_my_comments_appraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_direct"
            app:layout_heightPercent="26.56%w"
            app:layout_marginLeftPercent="7.65%w"
            app:layout_marginRightPercent="4.84%w"
            >

            <EditText
                android:id="@+id/edit_my_comments_appraise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="start"
                android:hint="写下您对课程的评价"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="4"
                android:maxLength="30"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/gray007"
                app:layout_textSizePercent="5%w"
                />

            <TextView
                android:id="@+id/tv_commentsnum_appraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp"
                android:text="0/30"
                android:textColor="@color/gray013"
                app:layout_textSizePercent="4.37%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您还有课程未打分，请先完成打分。"
            android:textColor="@color/gray013"
            app:layout_marginBottomPercent="3.06%w"
            app:layout_marginTopPercent="4.84%w"
            app:layout_textSizePercent="3.75%w"/>

        <TextView
            android:id="@+id/btn_comit_appraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bt_dfwc_t"
            android:gravity="center"
            android:text="打分完成"
            android:textColor="@color/white"
            app:layout_marginBottomPercent="5.78%w"
            app:layout_textSizePercent="4.37%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentFrameLayout>