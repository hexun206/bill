<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fra_playback_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/bjplayer_layout_center_controller_dialog_copy"/>

    <LinearLayout
        android:id="@+id/bjplayer_center_controller_volume_dialog_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bjplayer_bg_radius_8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bjplayer_center_controller_volume_ic_iv"
            style="@style/bjplayer_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bjplayer_ic_volume_up_white"/>

        <TextView
            android:id="@+id/bjplayer_center_controller_volume_tv"
            style="@style/bjplayer_text_big"
            tools:text="50%"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bjplayer_center_video_functions_ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/bjplayer_center_video_functions_rate_tv"
            style="@style/bjplayer_text_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bjplayer_video_functions_rate"
            android:visibility="gone"
            tools:text="加速"/>

        <TextView
            android:id="@+id/bjplayer_center_video_functions_frame_tv"
            style="@style/bjplayer_text_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bjplayer_controller_bg_99"
            android:gravity="center"
            android:text="@string/bjplayer_video_functions_frame_normal"
            android:visibility="gone"
            tools:text="标清"/>

        <TextView
            android:id="@+id/bjplayer_center_video_functions_segments_tv"
            style="@style/bjplayer_text_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bjplayer_video_functions_segments"
            android:visibility="gone"
            tools:text="课节"/>
    </LinearLayout>

    <include
        layout="@layout/bjplayer_layout_video_frame_copy"


        />

    <include layout="@layout/bjplayer_layout_video_rate_copy"/>

    <include layout="@layout/bjplayer_layout_video_segments_copy"/>


    <TextView
        android:id="@+id/tv_center_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bjplayer_bg_radius_8"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone"

        />

</FrameLayout>
