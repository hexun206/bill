<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/topbar"
        layout="@layout/general_topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        app:layout_heightPercent="64.8%w">

        <com.baijiahulian.player.BJPlayerView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            app:bottom_controller="@layout/player_bottombar_interview"
            app:center_controller="@layout/bjplayer_layout_center_controller_copy"
            app:layout_heightPercent="64.8%w"
            app:top_controller="@layout/player_topbar_interview"
            >
        </com.baijiahulian.player.BJPlayerView>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_play_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_heightPercent="8.33%w"
            app:layout_paddingLeftPercent="20.27%w"
            app:layout_paddingRightPercent="20.27%w">

            <TextView
                android:id="@+id/tv_detail_intro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/introduce"
                android:textColor="@color/black"
                app:layout_textSizePercent="46.66%h"/>

            <TextView
                android:id="@+id/tv_detail_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/video_text"
                android:textColor="@color/black004"
                app:layout_textSizePercent="46.66%h"/>

            <TextView
                android:id="@+id/tv_detail_plan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/video_plan"
                android:textColor="@color/black004"
                app:layout_textSizePercent="46.66%h"/>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:background="@color/gray005"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white001"
            app:layout_heightPercent="2.77%w"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
