<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".personal.InterviewVideoUploadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"


        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:src="@drawable/ic_back"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="上传面试视频"
            android:textColor="@color/black"
            android:textSize="18sp"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EAEAEA"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_remind_yellow"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="3sp"
                    android:text="资格证面试采取结构化面试+情景模拟相结合的考试形式，本视频录制包含以下2个内容：\n1、结构化面试（随机抽取2道题目作答）\n2、试讲（自行填写试讲篇目）"
                    android:textColor="#333333"
                    android:textSize="14sp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:text="结构化题目"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_gray_small"/>

                <TextView
                    android:id="@+id/tv_video_edit_tittle_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:lineSpacingExtra="3sp"
                    android:text="..."
                    android:textColor="@color/black003"
                    android:textSize="14sp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_gray_small"/>

                <TextView
                    android:id="@+id/tv_video_edit_tittle_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:lineSpacingExtra="3sp"
                    android:text="..."
                    android:textColor="@color/black003"
                    android:textSize="14sp"

                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="#F8F8F8"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11.5dp"
                android:text="试讲"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/bg_round_gray_small"
                android:drawablePadding="7.5dp"
                android:text="选择学段"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"

                />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_video_upload_phases"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="17.5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"

                ></android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/rel_video_upload_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_video_upload_subjects_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"

                    android:drawableLeft="@drawable/bg_round_gray_small"
                    android:drawablePadding="7.5dp"
                    android:text="选择学科"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_video_upload_subjects_tittle"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_video_upload_subjects_tittle"
                    android:src="@drawable/ic_enter"

                    />


                <EditText
                    android:id="@+id/edt_video_upload_subjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_video_upload_subjects_tittle"
                    android:layout_marginLeft="13.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="请选择学科"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray013"
                    android:textSize="14sp"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignLeft="@+id/edt_video_upload_subjects"
                    android:layout_below="@+id/edt_video_upload_subjects"
                    android:layout_marginRight="6.5dp"
                    android:layout_marginTop="7.5dp"
                    android:background="@color/gray016"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_video_upload_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_video_upload_version_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"

                    android:drawableLeft="@drawable/bg_round_gray_small"
                    android:drawablePadding="7.5dp"
                    android:text="选择教材版本"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_video_upload_version_tittle"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_video_upload_version_tittle"
                    android:src="@drawable/ic_enter"

                    />


                <EditText
                    android:id="@+id/edt_video_upload_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_video_upload_version_tittle"
                    android:layout_marginLeft="13.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="请选择教材版本"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray013"
                    android:textSize="14sp"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignLeft="@+id/edt_video_upload_version"
                    android:layout_below="@+id/edt_video_upload_version"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_marginTop="7.5dp"
                    android:background="@color/gray016"

                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/bg_round_gray_small"
                android:drawablePadding="7.5dp"
                android:text="课文标题"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"

                />


            <EditText
                android:id="@+id/edt_video_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.5dp"
                android:layout_marginRight="16.5dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:hint="请输入课文标题"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray013"
                android:textSize="14sp"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="23.5dp"
                android:layout_marginRight="16.5dp"
                android:layout_marginTop="7.5dp"
                android:background="@color/gray016"

                />
        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/tv_video_upload_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/gray_to_teal"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/gray_to_white"
        android:textSize="15sp"

        />
</LinearLayout>