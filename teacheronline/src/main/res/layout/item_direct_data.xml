<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wdxx_nwd"
            app:layout_marginLeftPercent="4.44%w" />
        <TextView
            android:id="@+id/tv_direct_time"
            android:layout_width="wrap_content"
            android:text="2018-5-2  13:25-15:00"
            app:layout_textSizePercent="3.33%w"
            app:layout_marginLeftPercent="2.5%w"
            android:textColor="@color/gray013"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_marginTopPercent="1.11%w"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:text="加载中..."
            app:layout_textSizePercent="3.88%w"
            android:textColor="@color/black007"
            app:layout_marginLeftPercent="9.16%w"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
