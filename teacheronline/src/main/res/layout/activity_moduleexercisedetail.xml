<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white001">

    <include
        android:id="@+id/topbar"
        layout="@layout/general_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_quickExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:background="@color/green007"
        app:layout_marginTopPercent="3.48%w"
        app:layout_marginBottomPercent="3.48%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/quickexercise"
            android:drawableRight="@drawable/arrow_right_white"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            app:layout_heightPercent="13.89%w"
            app:layout_textSizePercent="5%w"/>

        <!--<View-->
        <!--android:layout_width="14dp"-->
        <!--android:layout_height="16dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/arrow_right_white"-->
        <!--app:layout_heightPercent="4.44%w"-->
        <!--app:layout_marginLeftPercent="63.5%w"-->
        <!--app:layout_widthPercent="3.89%w"/>-->
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ListView
        android:id="@+id/lv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_quickExercise"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</com.zhy.android.percent.support.PercentRelativeLayout>