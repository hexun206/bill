<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/bg_speed"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_speed_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="x1"
            android:textColor="@color/black007"
            android:textSize="16sp"/>
        
        <View
            android:id="@+id/line_speed_1"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/black008"
            android:layout_margin="6dp"


            />

        <TextView
            android:id="@+id/tv_speed_quick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="x1.25"
            android:textColor="@color/black007"
            android:textSize="16sp"/>

        <View
            android:id="@+id/line_speed_2"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/black008"
            android:layout_margin="6dp"


            />
        <TextView
            android:id="@+id/tv_speed_quick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="x1.5"
            android:textColor="@color/black007"
            android:textSize="16sp"/>

        <View
            android:id="@+id/line_speed_3"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/black008"
            android:layout_margin="6dp"


            />

        <TextView
            android:id="@+id/tv_speed_quick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="x2"
            android:textColor="@color/black007"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>