<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="22dp"
        app:layout_paddingTopPercent="6.25%w">

        <TextView
            android:id="@+id/tv_subject_tilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:textColor="@color/gray010"
            android:textSize="15sp"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_marginRightPercent="3.33%w"
            app:layout_textSizePercent="4.16%w"/>

        <com.huatu.teacheronline.widget.CustomGridView
            android:id="@+id/gv_subject_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:padding="0dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            app:layout_marginBottomPercent="2.36%w"
            app:layout_marginTopPercent="2.36%w"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:background="@color/gray006"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <!--listviewçš„divider-->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="11.5dp"
        android:orientation="vertical"
        app:layout_heightPercent="3.19%w">

        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@color/white005"
            app:layout_heightPercent="3.05%w"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray006"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>