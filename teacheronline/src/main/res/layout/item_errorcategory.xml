<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <View
        android:id="@+id/v_line_up"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray018"
        app:layout_heightPercent="7%w"
        app:layout_marginLeftPercent="6.39%w"/>

    <View
        android:id="@+id/v_circle"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:background="@drawable/bg_circle_green"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginTopPercent="7%w"/>

    <TextView
        android:id="@+id/tv_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/v_circle"
        android:text="@string/default_value"
        android:textColor="@color/black"
        app:layout_marginLeftPercent="3.61%w"
        app:layout_marginTopPercent="5.55%w"
        app:layout_textSizePercent="4.44%w"/>

    <TextView
        android:id="@+id/tv_categoryErrorNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_categoryName"
        android:text="@string/default_value"
        android:textColor="@color/gray003"
        app:layout_marginLeftPercent="7.22%w"
        app:layout_marginTopPercent="5.55%w"
        app:layout_textSizePercent="4.44%w"/>

    <View
        android:id="@+id/v_line_down"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/v_circle"
        android:background="@color/gray018"
        android:visibility="gone"
        app:layout_heightPercent="7%w"
        app:layout_marginLeftPercent="6.39%w"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/v_circle"
        app:layout_heightPercent="7%w"
        app:layout_marginLeftPercent="6.39%w"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_pen"
        app:layout_heightPercent="5.28%w"
        app:layout_marginRightPercent="3.61%w"
        app:layout_marginTopPercent="5.55%w"
        app:layout_widthPercent="4.44%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>