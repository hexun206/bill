<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_check_vip_parsing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="visible"
        android:background="@color/gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_answer_vip"
            android:padding="8dp"
            android:text="你的答案C,回答错误"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_vip_parsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawablePadding="5dp"
            android:textColor="@color/black007"
            android:drawableLeft="@drawable/ic_btda"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="本题答案"
            android:visibility="visible"
            app:layout_textSizePercent="3.89%w"/>
        <TextView
            android:id="@+id/tv_vip_parsing_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/gray"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="本题答案"
            android:visibility="visible"
            app:layout_textSizePercent="3.89%w"/>

        <TextView
            android:id="@+id/tv_vip_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/black007"
            android:drawableLeft="@drawable/btjx"
            android:drawablePadding="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="本题解析"
            android:visibility="visible"
            app:layout_textSizePercent="3.89%w"/>
        <TextView
            android:id="@+id/tv_vip_analysis_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/gray"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="本题解析"
            android:visibility="visible"
            app:layout_textSizePercent="3.89%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
