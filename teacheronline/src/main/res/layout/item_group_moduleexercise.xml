<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/v_interval"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white001"
            app:layout_heightPercent="2.78%w"/>

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:layout_below="@id/v_interval"
            android:background="@color/gray005"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line1"
            app:layout_heightPercent="14.44%w"
            >
            <View
                android:id="@+id/btn_right_group_module"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_widthPercent="10%w"
                />
            <View
                android:id="@+id/view_line"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                app:layout_marginLeftPercent="10.83%w"
                app:layout_marginRightPercent="3.19%w"
                android:background="@color/gray004"
                />
            <ImageView
                android:id="@+id/img_expanable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_expanable"
                app:layout_marginLeftPercent="3.33%w"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_expanable"
                android:text="@string/default_value"
                app:layout_paddingLeftPercent="0.69%w"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                app:layout_marginLeftPercent="2.22%w"
                app:layout_textSizePercent="3.89%w"
                />

            <RatingBar
                android:id="@+id/group_ratingBar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/img_expanable"
                android:numStars="5"
                android:stepSize="20"
                android:visibility="gone"
                android:isIndicator="true"
                app:layout_heightPercent="5%w"
                app:layout_marginLeftPercent="2.22%w"
                />

            <View
                android:id="@+id/v_line4"
                android:layout_width="1dp"
                android:visibility="visible"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="5.36%w"
                android:background="@color/green004"
                android:layout_below="@+id/img_expanable"/>

            <View
                android:id="@+id/v_line7"
                android:layout_width="30dp"
                android:visibility="visible"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                app:layout_widthPercent="8.5%w"
                android:layout_below="@+id/img_expanable"/>

            <ImageView
                android:id="@+id/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="3.06%w"
                android:background="@drawable/more_arrow"
                />

            <TextView
                android:id="@+id/tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/icon_arrow_right"
                android:text="10/100"
                android:layout_centerVertical="true"
                android:textColor="@color/gray013"
                app:layout_textSizePercent="3.89%w"/>


        </com.zhy.android.percent.support.PercentRelativeLayout>


        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_1"
            android:layout_below="@id/tv_categoryName"
            android:background="@color/gray005"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>