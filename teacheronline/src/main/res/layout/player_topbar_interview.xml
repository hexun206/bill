<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_playback_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_heightPercent="14.03%w">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_titleContainer_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13.89%w">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_left_player"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            app:layout_widthPercent="13.89%w">

            <ImageView
                android:id="@+id/ib_main_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"

            android:visibility="visible"
            app:layout_marginLeftPercent="13.66%w"
            app:layout_marginRightPercent="13.66%w"
            app:layout_textSizePercent="5%w"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_main_right_player"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="2.78%w">

            <ImageView
                android:id="@+id/ib_main_right_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/download_zhibo"
                android:visibility="gone"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        />
    android:background="@color/gray004"
</com.zhy.android.percent.support.PercentLinearLayout>
