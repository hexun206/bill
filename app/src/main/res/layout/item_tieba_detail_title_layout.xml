<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/discuss_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_header" />

        <TextView
            android:id="@+id/discuss_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/discuss_image"
            android:text="name"
            android:textColor="#999CAA"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/discuss_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discuss_name"
            android:layout_toRightOf="@+id/discuss_image"
            android:text="2019-12-12"
            android:textColor="#999CAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/discuss_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="「员工关怀」"
            android:textColor="#999CAA"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="55dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/discuss_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black_22"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/discuss_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black_5B6C8A"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFE1E3E9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="全部评论"
        android:textColor="@color/black_5B6C8A"
        android:textSize="14sp" />
</LinearLayout>